{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Upload & Listen For Changes",
            "type": "shell",
            "command": "uv run tigerente live-sync \"${workspaceFolder}/src\"",
            "group": {
                "kind": "none",
                "isDefault": true
            }
        },
        {
            "label": "Upload Once",
            "type": "shell",
            "command": "uv run tigerente sync \"${workspaceFolder}/src\"",
            "group": {
                "kind": "none",
                "isDefault": false
            }
        }
    ]
}